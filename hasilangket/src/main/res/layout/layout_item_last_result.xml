<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/medium">

    <!--Region Label-->

    <com.example.core_util.BaseTextView
        android:id="@+id/tv_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:base_font_style="bold_italic"
        android:textSize="@dimen/text_large"
        tools:text="Ahmad"
        android:layout_marginEnd="@dimen/medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_label_dot"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.example.core_util.BaseTextView
        android:id="@+id/tv_label_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:base_font_style="bold_italic"
        android:textSize="@dimen/text_large"
        android:text=":"
        android:layout_marginEnd="@dimen/medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/barrier"/>

    <!--endregion-->

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="tv_label_dot"/>

    <com.example.core_util.BaseTextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_large"
        app:base_font_style="bold_italic"
        android:layout_marginStart="@dimen/medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barrier"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="@dimen/medium"
        tools:text="IPA/IPS/IPC" />

</androidx.constraintlayout.widget.ConstraintLayout>