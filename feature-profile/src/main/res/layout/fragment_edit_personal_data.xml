<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditPersonalDataFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/row_personal_data_guru_edit"
            layout="@layout/row_personal_data_guru_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_fit"
            android:visibility="gone" />

        <include
            android:id="@+id/row_personal_data_siswa_edit"
            layout="@layout/row_personal_data_siswa_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_fit" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            style="@style/ThemeOverlay.PakarPenjurusan.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_fit"
            android:enabled="false"
            android:paddingVertical="@dimen/small_fit"
            android:text="@string/submit"
            android:textColor="@color/white"
            tools:ignore="TooManyViews" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>